import java.util.*;
public class Main {
	public static void main(String[] args) {
		int n,i,j;
		Scanner s=new Scanner(System.in);
		n=s.nextInt();
		j=0;
		i=n;
		do
		{
			if(n%2==0)
				n=n/2;
			else
				n=(n-1);
			if(i%2==0)
				i=i/2;
			else
				i=(i-1);
			j++;
		}while(n!=1 && i!=1);
		System.out.print(j);
	}
}
/*
input 8
output 3
input 2
output 1
*/
