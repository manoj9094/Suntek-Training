#include <stdio.h>
struct student
{
    char name[50];
    int roll;
}s[10];
int main()
{
    int i,n;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
     printf("Enter name and roll no: %d ",i);
     scanf("%s", s[i].name);
     scanf("%d", &s[i].roll);
    }
    for(i=1;i<=n;i++)
    {
    printf("Name: %s",s[i].name);
    printf("\nRoll no: %d\n",s[i].roll);
    }
    return 0;
}
